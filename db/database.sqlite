CREATE TABLE users (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  username TEXT UNIQUE,
  password TEXT,
  referral_code TEXT,
  referred_by TEXT,
  balance REAL DEFAULT 0
);

CREATE TABLE tasks (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  user_id INTEGER,
  type TEXT,
  task_id TEXT,
  completed INTEGER DEFAULT 0,
  FOREIGN KEY (user_id) REFERENCES users(id)
);
